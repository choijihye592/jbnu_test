{
    "name": "myapp",
    "image": "your-django-image:latest",
    "env": {
        "DJANGO_SECRET_KEY": {
          "secret": "django_secret_key" 
        },
        "DEBUG": "False",
        "ALLOWED_HOSTS": "*"
      },
    "ports": [
      {
        "name": "http",
        "protocol": "HTTP",
        "port": 80,
        "targetPort": 8000
      }
    ],
    
    "run": {
        "cmd": "gunicorn mysite.wsgi:application --bind 0.0.0.0:$PORT"
    },

    "command": ["gunicorn", "mysite.wsgi", "--bind", "0.0.0.0:8000"],
    "volumes": [
        {
            
        "name": "staticfiles",
        "path": "/app/sss/mysite/mysite/staticfiles"

        }
    ]
  }
  