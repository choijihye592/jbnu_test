{
    "name": "my-django-app",
    "image": "your-django-image:latest",
    "env": {
      "DJANGO_SECRET_KEY": {
        "secret": "django_secret_key"
      },
      "DEBUG": "False",
      "ALLOWED_HOSTS": "*"
    },
    "ports": [
      {
        "port": 80,
        "protocol": "HTTP"
      }
    ],
    "run": {
      "cmd": "gunicorn mysite.wsgi:application --bind 0.0.0.0:$PORT",
      "type": "http",
      "args": {
        "name": "my-django-app",
        "env": [],
        "http": {
          "port": 80,
          "health": {
            "http": {
              "path": "/",
              "port": 80
            },
            "type": "http",
            "interval": "10s",
            "timeout": "2s",
            "check": {
              "type": "http",
              "path": "/",
              "port": 80
            }
          }
        }
      }
    }
}
  